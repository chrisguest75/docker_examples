FROM ubuntu:20.04 as base

RUN apt-get update \
        && apt-get --no-install-recommends install cpuinfo -y \ 
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/*

RUN echo "************************************************" && \
    echo "** uname -a" && \
    echo "************************************************"
RUN uname -a 
RUN echo "************************************************" && \
    echo "** cat /proc/cpuinfo" && \
    echo "************************************************"
RUN cat /proc/cpuinfo
RUN echo "************************************************" && \
    echo "** cpu-info" && \
    echo "************************************************"
RUN cpu-info
RUN echo "************************************************" && \
    echo "** cache-info" && \
    echo "************************************************"
RUN cache-info
RUN echo "************************************************" && \
    echo "** cpuid-dump" && \
    echo "************************************************"
RUN cpuid-dump
RUN echo "************************************************" && \
    echo "** isa-info" && \
    echo "************************************************"
RUN isa-info
RUN echo "************************************************" && \
    echo "** cat /proc/cmdline " && \
    echo "************************************************"
RUN cat /proc/cmdline 
RUN echo "************************************************" && \
    echo "** ulimit -a" && \
    echo "************************************************"
RUN ulimit -a 

CMD ["uname", "-a"]